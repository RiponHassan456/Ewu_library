<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Spring Library</title>

<link rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">
</head>
<body>

    <hr />
    <h3>Search Book:</h3>

    <div class="row">
        <div class="col-md-10 mx-auto">
            <form action="/searchResults" method="post">
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" name="title" placeholder="Enter book title" id="title">
                    </div>
                    <div class="col-sm-6">
                        <label for="author">Author:</label>
                        <input type="text" class="form-control" name="author" placeholder="Enter book author" id="author">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="category">Category:</label>
                    <select class="form-control" id="category" name="category">
                        <option value="all">All Categories</option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category._id %>"><%= category.catName %></option>
                        <% }); %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary px-4 float-right">Search</button>
            </form>
        </div>
    </div>
</div>
</body>
</html>
