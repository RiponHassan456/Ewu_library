<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>All Books</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-4">
    <h2 class="mb-4">All Books</h2>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach((book, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= book.Title %></td>
                    <td><%= book.Author %></td>
                    <td><%= book.CategoryId ? book.CategoryId.catName : 'N/A' %></td>
                    <td>
                        <a href="/updateBook?bookId=<%= book._id %>" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>
