<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - EWU Library</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
        }
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.75);
        }
        .sidebar .nav-link:hover {
            color: rgba(255, 255, 255, 1);
        }
        .sidebar .nav-link.active {
            background-color: #007bff;
            color: white;
        }
        .main-content {
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar">
                <div class="text-center text-white py-4">
                    <h4>EWU Library</h4>
                    <p>Admin Dashboard</p>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="/admindeshboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addBook">Add Book</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/books">All Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/searchBooks">Search Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/deletebook">Delete Book</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 main-content">
                <h2>Admin Dashboard</h2>
                <hr>

                <!-- Books Table -->
                <div class="card">
                    <div class="card-header">
                        <h4>Library Books</h4>
                    </div>
                    <div class="card-body">
                      <!-- In your admindeshboard.ejs or similar file -->
                                                                                    <table class="table">
  <thead>
    <tr>
        <th>Cover</th>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>Category</th>
                                </tr>
  </thead>
  <tbody>
    <% books.forEach(book => { %>

    <tr>
      <td>
        <% if(book.coverImage) { %>
          <img src="<%= book.coverImage %>" 
               alt="<%= book.Title %> কভার" 
               class="img-thumbnail" 
               style="max-width: 100px; height: auto;">
        <% } else { %>
          <div class="no-cover">There is no cover</div>
        <% } %>
      </td>
      <td><%= book.book_Id %></td>
      <td><%= book.Title %></td>
     <td><%= book.Author %></td>
    <td><%= book.CategoryId ? book.CategoryId.catName : 'N/A' %></td>
      <td>
        <span class="badge <%= book.isAvailable ? 'badge-success' : 'badge-danger' %>">
          <%= book.isAvailable ? 'উপলব্ধ' : 'ধার নেওয়া' %>
        </span>
      </td>
    </tr>

    <% }); %>
  </tbody>
</table>                                 <!-- In your admindeshboard.ejs -->

                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="card text-white bg-primary mb-3">
                            <div class="card-body text-center">
                                <h5 class="card-title">Add New Book</h5>
                                <a href="/addBook" class="btn btn-light">Go</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-success mb-3">
                            <div class="card-body text-center">
                                <h5 class="card-title">Search Books</h5>
                                <a href="/searchBooks" class="btn btn-light">Go</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-danger mb-3">
                            <div class="card-body text-center">
                                <h5 class="card-title">Delete Book</h5>
                                <a href="/deletebook" class="btn btn-light">Go</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>